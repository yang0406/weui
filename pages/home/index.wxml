<view class="container">
    <view>
        <swiper class="swiper_box" vertical="{{vertical}}"
         autoplay="{{autoplay}}"  interval="{{interval}}" bindchange="swiperchange"
         duration="{{duration}}"  indicator-dots="{{indicatorDots}}">
            <block wx:for="{{images}}" wx:key="item">
                <swiper-item>
                    <image src="{{item}}" class="slide-image"></image>
                </swiper-item>
            </block>
        </swiper>
        <view class="text">
            <view class="line_flag"></view>
            <text>正在上映</text>
        </view>
        <block wx:for="{{items}}" wx:key="item">
            <view class="flex item" bindtap="bindViewTap">
                <view class="item_left">
                    <image src="{{item.image}}"/>
                </view>
                <view class="flex_auto item_middle">
                    <view>
                        <text class="title">{{item.title}}</text>
                    </view>
                    <view>
                        <text class="title">{{item.subTitle}}</text>
                    </view>
                    <view>
                        <text class="actor">{{item.actor}}</text>
                    </view>
                </view>
                <view class="item_right">
                    <view>
                        <text class="score">{{item.score}}</text>
                    </view>
                    <view>
                        <text class="action">{{item.action}}</text>
                    </view>
                </view>
            </view>
        </block>
    </view>
</view>